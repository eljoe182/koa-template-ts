{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@test/*": ["__tests__/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"],
      "@controllers/*": ["src/app/controllers/*"],
      "@routes/*": ["src/app/routes/*"],
      "@routes": ["src/app/routes/index"],
      "@dependencies/*": ["src/app/dependencyInjections/*"],
      "@dependencies": ["src/app/dependencyInjections/index"],
      "@dependency": ["src/shared/infrastructure/dependency/index.ts"],
      "@persistance/*": ["src/shared/infrastructure/persistance/*"]
    }
  },
  "include": ["src/**/**.ts", "__tests__/**/**.ts"],
  "exclude": ["node_modules"]
}
