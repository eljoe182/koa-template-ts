{
  "name": "koa-template-ts",
  "version": "1.0.0",
  "description": "koa template with TypeScript",
  "main": "index.js",
  "directories": {
    "test": "__test__"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app/server/index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "clean": "rm -r dist; exit 0",
    "dev": "nodemon",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./dist/src/app/server/index.js",
    "prod": "npm run build && npm run start",
    "check-types": "tsc --noemit",
    "eslint": "eslint '*/**/*.{js,ts}' --fix --max-warnings=0 --no-error-on-unmatched-pattern",
    "test": "jest --passWithNoTests --forceExit",
    "test:features": "cucumber-js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collect-coverage --collectCoverageFrom=src/features/** --passWithNoTests",
    "prepare": "husky install"
  },
  "author": "Joise Garcia",
  "license": "ISC",
  "dependencies": {
    "axios": "1.4.0",
    "dotenv": "16.3.1",
    "glob": "10.3.3",
    "jest": "29.6.4",
    "kafkajs": "2.2.4",
    "koa": "2.14.2",
    "koa-bodyparser": "4.4.1",
    "koa-logger": "3.2.1",
    "koa-router": "12.0.0",
    "koa2-cors": "2.0.6",
    "mongodb": "5.8.1",
    "node-dependency-injection": "3.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsconfig-paths-jest": "0.0.1",
    "typescript": "5.1.6",
    "winston": "3.10.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@cucumber/cucumber": "9.4.0",
    "@eljoe182/mother-object-pkg": "1.0.2",
    "@types/chai": "4.3.5",
    "@types/chance": "1.1.3",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.4",
    "@types/koa": "2.13.8",
    "@types/koa-bodyparser": "4.3.10",
    "@types/koa-logger": "3.1.2",
    "@types/koa-router": "7.4.4",
    "@types/koa2-cors": "2.0.2",
    "@types/node": "20.5.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "chai": "4.3.8",
    "eslint": "8.47.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "koa-helmet": "^7.0.2",
    "nodemon": "3.0.1",
    "prettier": "3.0.2",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0"
  }
}
